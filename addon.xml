<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.deezer" name="Deezer" version="0.0.1" provider-name="Jakkerson">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" version="2.22.0" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>audio</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">This addon allows you to listen to music from Deezer.</summary>
        <description lang="en">This addon allows you to stream music from Deezer. You can search for tracks, artists and albums. A premium account is REQUIRED.</description>
        <disclaimer lang="en">This addon was not provided by Deezer.</disclaimer>
        <platform>all</platform>
        <language>en</language>
        <license>GPL-3.0</license>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
